<div class="block-show">
<!-- 	<p>
	  <strong>Title:</strong>
	  <%= @article.title %>
	</p> -->
	<h1 clsas="block-show_title"><%= @article.title %></h1>
	<div class="block-show_content">
		<%= @article.text %>
	</div>

	<div class="block-show_comments">
		<h5>Comments</h5>
		<% if @article.comments.empty? %>
			<p>no comments added yet</p>
		<% else %>
			<%= render @article.comments %>
		<% end %>
		<h5>Add a comment:</h5>
		<%= render 'comments/form' %>
	</div>

	 
	<%= link_to 'Edit', edit_article_path(@article) %> |
	<%= link_to 'Back', articles_path %>
</div>

